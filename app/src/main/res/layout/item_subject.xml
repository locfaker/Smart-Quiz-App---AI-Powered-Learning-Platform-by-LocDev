<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textSubjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Toán học"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/textQuestionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 câu hỏi"
                android:textSize="12sp"
                android:textColor="@color/design_default_color_on_surface" />

            <TextView
                android:id="@+id/textAverageScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm TB: 85%"
                android:textSize="12sp"
                android:textColor="@color/design_default_color_primary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
